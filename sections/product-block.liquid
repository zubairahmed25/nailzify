<!-- Slick CSS -->
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css">

<!-- Optional Slick Theme -->
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css">
<!-- jQuery (required for Slick) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Slick JS -->
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>


<section class="cus-product-bg">
    <div class="page-width">
      <div class="cus-product-heading">
          {{ section.settings.product_heading }}
      </div>
        <div class="product-container">
            {% for block in section.blocks %}
                <div class="product-container-flex">
                    <div class="left-col">
  <div class="image-wrapper">
    {% if block.settings.block_image != blank %}
      <img src="{{ block.settings.block_image | img_url: 'master' }}" >
      <span class="ping"></span>
    {% endif %}
  </div>
</div>

                    <div class="right-col">
                     {% if block.settings.product != blank %}
                       {% assign selected_product = all_products[block.settings.product] %}
    
                   {% if selected_product %}
                  <div class="custom-product-card">
                  {%- render 'product-card',
            product: selected_product,
            product_id: product.id,
            section_id: section.id,
            lazy_load: false,
            image_ratio: settings.product_image_ratio,
            image_fill: settings.product_image_fill,
            show_secondary_image: settings.product_secondary_image,
            show_vendor: settings.product_vendor,
            show_rating: settings.product_rating,
            show_color_swatches: settings.product_color_swatches,
            show_countdown: settings.product_countdown,
            show_quick_add: settings.product_quick_add,
            show_quick_view: settings.product_quick_view,
            show_save_amount: settings.product_save_amount,
            save_type: settings.product_save_type,
            show_icon_list: settings.product_icon_list
          -%}
                  </div>
                    {% endif %}
            {% endif %}
                 </div>

                </div>
            {% endfor %}
        </div>
    </div>
  </section>
{% schema %}
{
  "name": "Product Block",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Desktop Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Desktop Padding Bottom",
      "default": 36
    },
    {
  "type": "richtext",
  "id": "product_heading",
  "label": "Product Headig"
}
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "image_picker",
          "id": "block_image",
          "label": "Main Image"
        },
        {
  "type": "product",
  "id": "product",
  "label": "Slect Product"
}
      ]
    }
],
  "presets": [
    { 
        "name": "Product Block"
     }
]
}
{% endschema %}
<script>
 $(document).ready(function(){
  $('.product-container').slick({
    infinite: true,
    slidesToShow: 1, 
    slidesToScroll: 1,
    speed: 500,
    autoplay: false,
    arrows: true,
    responsive: [
      {
        breakpoint: 768,
        settings: {
          arrows: false,
          slidesToShow: 1
        }
      },
      {
        breakpoint: 480,
        settings: {
          arrows: false,
          slidesToShow: 1
        }
      }
    ]
  });
});

</script>
<style>
  .cus-product-bg {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
 .product-container-flex {
  display: flex !important;
  justify-content: space-between;
      align-items: center;
}
.image-wrapper {
  position: relative;
  display: inline-block;
}

.image-wrapper .ping {
  position: absolute;
  top: 10%;   /* yahan percentage adjust kar sakte ho for correct position */
  left: 15%;  /* horizontal center ke liye */
  transform: translate(-50%, -50%);
  width: 40px;
  height: 40px;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-wrapper .ping::after {
  content: "";
  width: 15px;
  height: 15px;
  background: #fff;
  border-radius: 50%;
}

.left-col {
  width: 55% !important;
  line-height: 0;
}
.left-col img {
  width: 100%;
}
.right-col {
  width: 40% !important;
}
.product-container {
      width: 80% !important;
  margin: 0 auto;
}

.product-container .slick-prev {
    left: -5rem;
}
.product-container .slick-next {
    right: -4rem;
}
.product-container .slick-prev:before,
.product-container .slick-next:before {
  font-size: 45px !important;
  color: black !important;
}
.cus-product-heading
 {
    padding-bottom: 30px;
}
.cus-product-heading p
 {
    text-align: center;
    letter-spacing: 0.2em;
    font-size: 20px;
    line-height: 35px;
    text-transform: uppercase;
}
@media (max-width: 768px) {
.product-container-flex {
 flex-wrap: wrap;
 gap: 30px;
}
.left-col {
  width: 100% !important;
}
.right-col {
  width: 100% !important;
}
.product-container {
      width: 100% !important;
}
}
</style>