
<div style="border:solid 1px red;margin-top:50px;"> 

{% assign suit_collections = collection.metafields.custom.collection_suit.value %}

<p>Metafield raw value:</p>
<pre>{{ suit_collections }}</pre>

{% if suit_collections != blank %}
  <ul>
    {% for suit_collection in suit_collections %}
      <li>
        <a href="{{ suit_collection.url }}">
          {% if suit_collection.image %}
            <img src="{{ suit_collection.image | img_url: '600x600' }}" alt="{{ suit_collection.title }}">
          {% endif %}
          <h3>{{ suit_collection.title }}</h3>
        </a>
      </li>
    {% endfor %}
  </ul>
{% else %}
  <p>No collections selected in metafield.</p>
{% endif %}




</div>
{% schema %}
{
  "name": "Collection Suit", 
  "settings": [],
  "blocks": [], 
  "presets": [
    {
      "name": "Collection Suit"
    }
  ]
}
{% endschema %}
 
