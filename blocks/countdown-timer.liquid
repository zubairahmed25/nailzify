{%- liquid
  assign alignment = 'inherit'
  if block.settings.width != 'fit-content'
    assign alignment = block.settings.alignment
  endif
  assign alignment_mobile = 'inherit'
  if block.settings.width != 'fit-content'
    assign alignment_mobile = block.settings.alignment_mobile
  endif
-%}
<animate-element data-animate="zoom-out" class="block text-{{ alignment_mobile }} md:text-{{ alignment }} size-style" style="{% render 'section-size-style', settings: block.settings %}" {{ block.shopify_attributes }}>
  {%- capture expiration_date -%}{{ block.settings.year }}-{{ block.settings.month }}-{{ block.settings.day }} {{ block.settings.hour }}:{{ block.settings.minute }}:00{%- endcapture -%}
  <countdown-timer
    class="countdown__timer {{ block.settings.text_font }} {{ block.settings.text_size }}{% if block.settings.text_font == 'subtitle' %} uppercase leading-tight tracking-widest{% endif %} flex flex-wrap"
    data-expires="{{ expiration_date | date: '%FT%T%:z' | escape }}"
    data-compact="{% if block.settings.compact %}true{% else %}mobile{% endif %}"
  >
    <div class="countdown__item">
      <p>--</p><span>{{ 'general.date.days' | t }}</span>
    </div>
    <div class="countdown__item">
      <p>--</p><span>{{ 'general.date.hours' | t }}</span>
    </div>
    <div class="countdown__item">
      <p>--</p><span>{{ 'general.date.minutes' | t }}</span>
    </div>
    <div class="countdown__item">
      <p>--</p><span>{{ 'general.date.seconds' | t }}</span>
    </div>
  </countdown-timer>
  {%- if block.settings.message != blank -%}
    {%- liquid
      if section.settings.heading_size == 'title-sm' or section.settings.heading_size == 'title-md'
        assign subtext_size = 'subtext-md'
      else
        assign subtext_size = 'subtext-lg'
      endif
    -%}
    <div class="countdown__message rte {{ subtext_size }}">
      {{- block.settings.message -}}
    </div>
  {%- endif -%}
</animate-element>

