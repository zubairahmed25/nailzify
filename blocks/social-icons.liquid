<div class="size-style spacing-style" style="{% render 'section-size-style', settings: block.settings %}{% render 'section-spacing-style', settings: block.settings %}" {{ block.shopify_attributes }}>
  {%- liquid
    assign gap = block.settings.gap | divided_by: 4
    assign gap_modulo = block.settings.gap | modulo: 4
    if gap_modulo != 0
      assign gap = gap | append: 'd5'
    endif
    
    if block.settings.iwidth == 'fit'
      render 'social-icons', size: 'lg', gap: gap
    else
      render 'social-icons', size: 'custom', gap: gap, width: block.settings.icon_width
    endif
  -%}
</div>

{% schema %}
{
  "name": "t:blocks.social-icons.name",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "t:blocks.social-icons.settings.paragraph.content"
    },
    {
      "type": "select",
      "id": "iwidth",
      "label": "t:sections.global.settings.icon_width.label",
      "options": [
        {
          "value": "fit",
          "label": "t:sections.global.settings.icon_width.options__1.label"
        },
        {
          "value": "custom",
          "label": "t:sections.global.settings.icon_width.options__2.label"
        }
      ],
      "default": "fit"
    },
    {
      "type": "range",
      "id": "icon_width",
      "label": "t:sections.global.settings.custom_width.label",
      "default": 24,
      "min": 12,
      "max": 128,
      "step": 2,
      "unit": "px",
      "visible_if": "{{ block.settings.iwidth == 'custom' }}"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:blocks.group.settings.gap.label",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 28
    },
    {
      "type": "header",
      "content": "t:blocks.group.settings.header__size.content"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:blocks.group.settings.width.label",
      "options": [
        {
          "value": "fill",
          "label": "t:blocks.group.settings.width.options__2.label"
        },
        {
          "value": "custom",
          "label": "t:blocks.group.settings.width.options__3.label"
        }
      ],
      "default": "fill"
    },
    {
      "type": "range",
      "id": "custom_width",
      "label": "t:blocks.group.settings.custom_width.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100,
      "visible_if": "{{ block.settings.width == 'custom' }}"
    },
    {
      "type": "select",
      "id": "width_mobile",
      "label": "t:blocks.group.settings.width_mobile.label",
      "options": [
        {
          "value": "fill",
          "label": "t:blocks.group.settings.width.options__2.label"
        },
        {
          "value": "custom",
          "label": "t:blocks.group.settings.width.options__3.label"
        }
      ],
      "default": "fill"
    },
    {
      "type": "range",
      "id": "custom_width_mobile",
      "label": "t:blocks.group.settings.custom_width.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100,
      "visible_if": "{{ block.settings.width_mobile == 'custom' }}"
    },
    {
      "type": "header",
      "content": "t:blocks.group.settings.header__padding.content"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:blocks.group.settings.padding_top.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:blocks.group.settings.padding_bottom.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "t:blocks.group.settings.padding_left.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "t:blocks.group.settings.padding_right.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "t:blocks.social-icons.name",
      "category": "t:categories.links"
    }
  ]
}
{% endschema %}
