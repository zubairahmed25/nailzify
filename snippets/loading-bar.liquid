{%- doc -%}
  Renders a full-screen loading indicator with spinning animation.

  Creates a fixed overlay with centered spinner icon for page transitions or async operations.

  @example
  {% render 'loading-bar' %}
{%- enddoc -%}

<loading-bar class="loading-bar block fixed top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
  {%- render 'icon', icon: 'spinner', size: 'lg', class: 'absolute animate-spin' -%}
</loading-bar>
