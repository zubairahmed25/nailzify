{%- doc -%}
  Renders a full-bleed overlay.

  @param {object} settings - Block or section settings, expecting `overlay_color`, `overlay_style`, and `gradient_direction`
  @param {string} [layer] - The z-index layer for the overlay
  @param {string} [context] - Rendering context ('section' adds banner styling, others use default)

  @example
  {% render 'overlay', settings: section.settings, layer: '0' %}
{%- enddoc -%}

<div
  class="overlay overlay--{{ settings.overlay_style | default: 'gradient' }}{% if context == 'section' %} banner__overlay{% endif %} absolute top-0 left-0 w-full h-full pointer-events-none"
  style="
    --overlay-layer: {{ layer }};
    --overlay-color: {{ settings.overlay_color | default: 'rgb(0 0 0 / 0.25)' }};
    --overlay-color--end: {{ settings.overlay_color | color_modify: 'alpha', 0 | default: 'rgb(0 0 0 0)' }};
    --overlay-direction: {{ settings.gradient_direction | default: 'to top' }};
  "
>&nbsp;</div>
