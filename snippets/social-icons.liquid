{%- doc -%}
  Renders a list of social media platform links with branded icons.

  Displays only platforms configured in theme settings, with hover effects and accessibility.

  @param {string} gap - Tailwind gap spacing between icons (e.g., '4', '6', '8')
  @param {string} size - Icon size: '2xs', 'xs', 'sm', 'md', 'lg', 'xl'
  @param {string} [width] - Custom width in pixels

  @example
  {% render 'social-icons', size: 'lg', gap: '6' %}
{%- enddoc -%}

{%- if settings.social_facebook_link != blank or settings.social_twitter_link != blank or settings.social_instagram_link != blank or settings.social_youtube_link != blank or settings.social_tiktok_link != blank or settings.social_pinterest_link != blank or settings.social_snapchat_link != blank or settings.social_tumblr_link != blank or settings.social_vimeo_link != blank -%}
  <ul class="flex flex-wrap items-center gap-{{ gap }}" role="list">
    {%- if settings.social_facebook_link != blank -%}
      <li>
        {%- assign platform =  'general.social.links.facebook' | t -%}
        <a href="{{ settings.social_facebook_link }}" class="social_platform block relative" is="magnet-link" title="{{ 'general.social.social_platform' | t: name: shop.name, platform: platform | escape }}">
          {%- render 'icon-brand', icon: 'facebook', size: size, width: width -%}
          <span class="sr-only">{{ platform }}</span>
